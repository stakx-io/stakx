<!doctype html>
<html lang="en">
    <head>
        <title>{{ error_title }}</title>

        <style>
            body {
                background-color: #46394b;
                color: white;
                font-family: sans-serif;
                margin: 0 auto;
                padding: 15px;
            }

            .exception_summary {
                border-left: 3px solid #f9e64a;
                margin-left: 15px;
                padding-left: 15px;
            }

            summary {
                border: 1px solid #ffffff;
                padding: 5px 10px;
            }

            pre {
                background-color: #282828;
                margin: 0;
                padding: 15px;
                overflow: auto;
            }

            h1 {
                border-bottom: 1px solid rgba(255, 255, 255, 0.5);
                padding-bottom: 10px;
            }

            h2 {
                margin: 0;
            }

            p {
                margin-top: 0;
            }

            @media (min-width: 992px) {
                body {
                    width: 900px;
                }
            }
        </style>
    </head>

    <body>
        <h1>{{ error_title }}</h1>

        <div class="exception_summary">
            <p><strong>{{ error_exception }}</strong></p>
            <p>{{ error_message | nl2br }}</p>
        </div>

        <details>
            <summary>Stack Trace</summary>
            <pre>{{ error_trace }}</pre>
        </details>
    </body>
</html>
